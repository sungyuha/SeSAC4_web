<html>
    <head>
        <title>axios로 보내기</title>

        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

        <script>
            function sendGet(){
                axios({
                    method: "get",
                    url: "http://localhost:9999/receive2",
                    params: {
                        name: "codee"
                    } 
                }).then((a) => {return a.data; })
                .then((d) => {
                    alert( d.message );
                });
            }

            function sendForm(){
                var form = document.getElementById("form_info");
                console.log( form );

                form.checkValidity();
                var result = form.checkValidity();
                if ( !result ){
                    form.reportValidity();

                    return false;
                }
                console.log( result );
            }
        </script>
    </head>

    <body>
        <div>
            <p>폼 전송 - 실습</p>
        </div>    
        <form id="form_info" action="receive2" method="GET">
                <label>
                    이름
                    <input type="text" name="name" placeholder="이름" required>
                </label><br>
                <br>
                <label>
                    성별
                    <input type="radio" name="gender" id="gender_1" value="남">
                    <label for="gender_1">남자</label>
                    <input type="radio" name="gender" id="gender_1" value="여">
                    <label for="gender_1">여자</label>
                </label><br>
                <br>
                <label>
                    생년월일
                    <select name="year">
                        <% for( var i = 1950; i < 2023; i++) { %>
                            <option value=<%=i%>><%=i%></option>
                        <% } %>
                    </select>

                    <select name="mm">
                        <% for( var i = 1; i < 13; i++) { %>
                            <option value=<%=i%>><%=i%></option>
                        <% } %>
                    </select>

                    <select name="day">
                        <% for( var i = 1; i < 32; i++) { %>
                            <option value=<%=i%>><%=i%></option>
                        <% } %>
                    </select>
                </label><br>
                <br>
                <label>
                    관심사
                    <input type="checkbox" name="like" value="여행">여행
                    <input type="checkbox" name="like" value="패션">패션
                    <input type="checkbox" name="like" value="음식">음식
                </label><br>
                <br>
                <button type="submit" onclick="sendForm()">회원가입</button>
        </form>
    </body>
</html>